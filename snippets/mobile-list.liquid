<div>
    {%- comment -%}class="header-nav-list {% if class != blank %}{{ class }}{% endif %}"{%- endcomment -%}
	{% assign navList = linklists[handle] %}
	<ul class='nav'>


		{% comment %}
			Creates new variable called navList, which grabs linklist object for the link list we need, let us define handle variable on the include tag ie in header.liquid or footer footer.liquid
		{% endcomment %}
		{% for link in navList.links %}


			<li class='nav_item'>
				{% assign child_list_handle = link.title | handleize %}

                {% if linklists[child_list_handle].links != blank %}
                
                    <p class="text-link mega_item mobile_item" href="{{ link.url }}">{{ link.title }}
                        <span class="header-icon">
                            <i class="down"></i>
                        </span>
                    </p>
                    					
                        <div class="mega-menu-full">
                            <div class="mega-menu-group">
                                <div class="nav-column-first">
                                    <div class="nav-list mega-menu-list">
                                        <ul class='parent_link'>
                                            {% for childlink in linklists[child_list_handle].links %}
                                                <li>
                                                    <a class="text-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                                </li>
                                            {% endfor %}

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
					
				{% else %}
					<a class="text-link mega_item mobile_item" href="{{ link.url }}">{{ link.title }}</a>
                {% endif %}
                
			</li>
		{% endfor %}
	</ul>
</div>
