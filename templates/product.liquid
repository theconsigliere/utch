{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

{% assign description = product.description %}

{% if product.description contains '---' %}
  {% assign quickdescription = product.description | split: '---' | first %}
  {% assign description_array = product.description | split: '---' %}

  {% assign productInfoKeys = 'Latin|Why|How' | split: '|' %}
  {% for key in productInfoKeys %}


{% assign split_key = key | prepend: '~*~' | append: '~*~' %}
{% if product.description contains split_key %}
  {% if key == 'Latin' %}
  {% assign latin = product.description | split: split_key | last | split: '---' | first %}
{% elsif key == 'Why' %}
  {% assign why = product.description | split: split_key | last | split: '---' | first %}
{% elsif key == 'How' %}  
  {% assign how = product.description | split: split_key | last | split: '---' | first %}
{% endif %}   
{% endif %} 

  {% endfor %}


{% endif %}

<div id="page-product">

  {% comment %}Begin Product Top{% endcomment %}
  <div id="product-top" class="wrapper grid">

<div class="product-top-inner">
  <div class="product-images js-product-slideshow">
    <div class="slides js-slides">
      {% for image in product.images %}
        <div class="single-image">
          <img src="{{ image.src | img_url: '600x' }}" alt="{{ image.alt | escape }}">
        </div>
      {% endfor %}
    </div>
    

    {% if product.images.size > 1 %}
      {% include 'slider-buttons' %}

      <div class="image-counter">
        <span class="js-current-slide">
          1
        </span>
        of {{ product.images.size }}
      </div>
    {% endif %}
  </div>

  <div class="product-actions">
    {% if collection %}

    <div class="collection-anchor-title">
      <a href="{{ collection.url }}">
        <span class="collection-mark">
          {{ collection.title }}
        </span>
      </a>

    </div>

    {% endif %}

    <h6 class='green-text product-latin'>{{ latin | strip_html }}</h6>
    <h3 class="product-title">{{ product.title }}</h3>
    <h6>{{ quickdescription }}</h6>

    {% include 'add-to-cart-form' %}


    <div class="product-detail-tabs">
      <details>
        <summary><p class='font-bolder'>{{ 'product.description.title' | t }}<span class="cross-icon"></span></p></summary>
        <div class="content">
            <span>{{ quickdescription }}</span>
        </div>
      </details>
      <details>
        <summary><p class='font-bolder'>{{ 'product.description.why' | t }}<span class="cross-icon"></span></p></summary>
        <div class="content">
            <span>{{ why }}</span>
        </div>
      </details>
      <details>
        <summary><p class='font-bolder'>{{ 'product.description.how' | t }}<span class="cross-icon"></span></p></summary>
        <div class="content">
            <span>{{ how }}</span>
        </div>
      </details>

    </div>
    
  </div>
</div>

  </div>
  {% comment %}End Product Top{% endcomment %}


    


  {% if collection %}

    {% comment %}Begin Product Bottom{% endcomment %}
    <div id="product-bottom" class="wrapper grid">

  {% include 'product-more' with collection: collection, limit: 6, exclude: product.handle %}
  {% endif %}
  

</div>

  {% comment %}End Product Bottom{% endcomment %}