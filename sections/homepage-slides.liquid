{% schema %}

{
    "name": "Collection Slides",
    "class": "collection-slides",
    "settings":  
    [    
        {
            "id": "slide_title",
            "type": "text",
            "label": "Title",
            "placeholder": "Slide Title"
        }, {
            "id": "slide_content",
            "type": "textarea",
            "label": "Slide Content"
        }
    ],
    "blocks": [
        {
            "type": "category",
            "name": "Category",
            "settings": [
                {
                    "id": "image",
                    "type": "image_picker",
                    "label": "Background Image"
                }, {
                    "id": "title",
                    "type": "text",
                    "label": "Title",
                    "placeholder": "Slide Title"
                }, {
                    "id": "content",
                    "type": "textarea",
                    "label": "Slide Content"
                }, {
                    "id": "button_url",
                    "type": "url",
                    "label": "Button URL"
                }, {
                    "id": "button_text",
                    "type": "text",
                    "label": "Button Text",
                    "placeholder": "Shop Now",
                    "info": "Defaults to \"Shop Now\""
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "content",
            "name": "Collection Slides",
            "blocks": [
                {
                    "type": "category",
                    "settings": {
                        "title": "Add Category",
                        "content": "Lorem ipsum"
                    }
                }
            ]
        }
    ]
}

{% endschema %}

<div class="collection-slides">

    <div class="title-section" id="page__title_section">
        {% if section.settings.slide_title != blank %}
            <h3 class="">{{ section.settings.slide_title }}</h3>
        {% endif %}

        <h6 class="p-fade">{{ section.settings.slide_content }}</h6>
    </div>


    <div class="category-item-group">

        <div id="hutch-homepage-slider" class="glide">
         
        
              <div class="main-carousel">
                
                {% for block in section.blocks %}
        
                <div class="carousel-cell">
        
                    <a href="{{ block.settings.button_url }}" class="category-link">
        
                        <div class="main-slide-item" {{ block.shopify_attributes }}>
        
                            {% if block.settings.image != blank %}
                                <div class="main-slide-image">
                                    <img data-src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" class="lazyload"/>
        
                                </div>
                            {% endif %}
        
                            <div class="main-slide-content">
        
                                <h3 class="white">{{ block.settings.title }}</h5>
                                {% if block.settings.content != blank %}
                                    <p class='white'>{{ block.settings.content }}</p>
                                {% endif %}


                                <div class="main-slide-bottom">
                                    {% if block.settings.button_url != blank %}
                                        <div class=" button">
                                            {% if block.settings.button_text != blank %}
                                                {{ block.settings.button_text }}
                                            {% else %}
                                                {{ "general.shop.shop_now" | t }}
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
        
                            </div>
        

        
                            
                        </div>
        
                    </a>
        
                </div>
                {% endfor %}
                
            </div>


        </div>
    </div>

</div>    


