{% schema %}
    {
        "name": "Faq Menu",
     "blocks": [
        {
            "type": "faq-block",
            "name":"FAQ Menu Item",
            "settings": [
                {
                    "id": "faq_url",
                    "type": "url",
                    "label": "FAQ Menu Url"
                },
                {
                    "type": "text",
                    "id": "faq_t_section",
                    "default": "Title",
                    "label": "FAQ Menu Title"
                }
            ]
        }
     ]
      }

      


{% endschema %}


<div class="faq-menu">

    <div class="faq-menu-inner">

        {% for block in section.blocks %}

            {% if block.settings.faq_url != blank %}

                <a href="{{ block.settings.faq_url }}" class="faq-menu-item">
                    <div class="faq-menu-item-section">
                    
                            <p class='font-bolder uppercase'>{{ block.settings.faq_t_section }}</p>
                    
                    </div>
                </a>

            {% endif %}

        {% endfor %}

    </div>

</div>
