<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {%- comment -%}Favicon!{%- endcomment -%}
      {% if settings.favicon != blank %}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png"/>
  {% endif %}
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.scss' | asset_url | stylesheet_tag }}
  {{ 'application.js' | asset_url | script_tag }}

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-LH15N17QCB"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
  
    gtag('config', 'G-LH15N17QCB');
  </script>
  
</head>
<body>

  {% include "header" %}


  <main role="main">

    {{ content_for_layout }}

    {% if template == 'index' %}
      {{content_for_index}}
    {% endif %}
    

    {% include "footer" %}

  </main>


{% comment %}
			makes the page fade when mini-cart is open
		{% endcomment %}

    <div id="no-click"></div>

  <script async src="{{ 'lazysizes.min.js' | asset_url }}"></script>
  {{ "jquery-3.3.1.min.js" | asset_url | script_tag }}

  {% comment %}
			if we have multiple currencies engaged enqueue scripts below
		{% endcomment %}
    {% if settings.show_multiple_currencies %}
    {{ "//cdn.shopify.com/s/javascripts/currencies.js" | script_tag }}
    {{ "jquery.currencies.min.js" | asset_url | script_tag }}
{% endif %}
{% include 'currencies' %}


{{ "glide.min.js" | asset_url | script_tag }}
{{ "glide-user.js" | asset_url | script_tag }}

  {{ "search.js" | asset_url | script_tag }}
  {{ "currency-picker.js" | asset_url | script_tag }}
  {{ "application.js" | asset_url | script_tag }}
  {{ "drag-scroll.js" | asset_url | script_tag }}
  {{ "animation.js" | asset_url | script_tag }}
  {{ "header.js" | asset_url | script_tag }}

</body>
</html>
